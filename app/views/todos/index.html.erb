<br />
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
			<div class="panel-heading text-center"><h4>My List</h4></div>
			<div class="Panel-body">
				<div> </div>	
				<table class="table">
					<thead class="text-center">
						<tr>
							<th>Description</th>
							<th>Days left</th>
							<th>Complete</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th colspan='3'><%= link_to	'Create new todo', new_todo_path %></th>
						</tr>
						<tbody>
							<%= render partial: 'todo', collection: @todos %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<% if @todo.errors %>
			<p><%= @todo.errors.messages.first %></p>
		<% end %>

		<%= form_for @todo, html: {class: 'form-inline'} do |f| %>
			<div class="form-group">
				<%= f.label :description, class: 'sr-only' %>
				<%= f.text_field :description, class: 'form-control', placeholder: 'Description' %><br />
			</div>
			<div class="form-group">
				<%= f.submit 'Save', class: "btn btn-success" %>
			</div>
		<% end %>
	</div>
</div>
