<div class="row">
	<div class="col-md-2 col-md-offset-5">
		<h3>My List</h3>
	</div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table">
			<thead>
				<tr>
					<th>Description</th>
					<th>Days left</th>
					<th>Complete</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th colspan='3'><%= link_to	'Create new todo', new_todo_path %></th>
				</tr>
			<tbody>
			<% @todos.each do |todo| %>
				<tr>
					<td><%= link_to todo.description, todo %></td>
					<td><%= todo.days_left %></td>
					<td>
						<input type="checkbox" />
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>
